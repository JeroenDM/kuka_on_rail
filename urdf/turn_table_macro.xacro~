<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="turn_table" params="prefix">

  <material name="grey">
    <color rgba="0.3 0.3 0.3 1.0"/>
  </material>
    <material name="green">
    <color rgba="0.0 0.8 0.0 0.5"/>
  </material>

  <link name="${prefix}base_link">
    <visual>
      <geometry>
        <box size="0.2 0.2 0.01"/>
      </geometry>
    </visual>
  </link>

  <link name="${prefix}support">
    <visual>
      <geometry>
        <box size="1 0.2 2"/>
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry>
        <box size="1 0.2 2"/>
      </geometry>
    </collision>
  </link>

  <link name="${prefix}table">
    <visual>
      <geometry>
        <box size="1 3 0.1"/>
      </geometry>
      <origin xyz="0 1.6 0"/>
      <material name="green"/>
    </visual>
    <collision>
      <geometry>
        <box size="1 3 0.1"/>
      </geometry>
      <origin xyz="0 1.6 0"/>
    </collision>
  </link>

  <joint name="base_to_support" type="fixed">
    <parent link="${prefix}base_link"/>
    <child link="${prefix}support"/>
    <origin rpy="0 0 0" xyz="0 0 1"/>
  </joint>

  <joint name="support_to_table" type="revolute">
    <parent link="${prefix}support"/>
    <child link="${prefix}table"/>
    <axis xyz="0 1 0"/>
    <limit effort="1000.0" lower="-1.5" upper="1.5" velocity="0.5"/>
    <origin rpy="0 0 0" xyz="0 0 0.5"/>
  </joint>
  
  </xacro:macro>

</robot>


